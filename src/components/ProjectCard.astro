---
interface Props {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  index: number;
}

const { title, description, image, technologies, index } = Astro.props;
---
<div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:scale-105 transition duration-300">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 text-gray-100">{title}</h3>
    <p class="text-gray-400 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded text-sm">{tech}</span>
      ))}
    </div>
    <button
      class="bg-gray-700 text-gray-100 px-4 py-2 rounded hover:bg-gray-600 transition duration-300 inline-block"
      onclick={`window.openProjectModal(${index})`}
    >
      Ver proyecto
    </button>
  </div>
</div>