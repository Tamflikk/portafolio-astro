---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnimatedImage from '../components/AnimatedImage.jsx';
import ProjectCard from '../components/ProjectCard.astro';
import SkillBar from '../components/SkillBar.astro';
import ProjectModal from '../components/ProjectModal.jsx';
import AnimatedTypingText from '../components/AnimatedTypingText.jsx'

const projects = [
  {
    title: "Entereza Fintech",
    description: "Plataforma financiera con un equipo de 10 personas.",
    fullDescription: "En Entereza Fintech, me encargué de desarrollar los sistemas web y las aplicaciones móviles utilizando ReactJS y React Native con Expo. Además, gestioné los servidores en Google Cloud y administré las bases de datos. Gracias a nuestro esfuerzo, la plataforma logró afiliar a más de 100 empresas, 200 sucursales y registrar 50,000 usuarios.",
    image: "/images/enterezaBanner.jpg",
    technologies: ["React", "Node.js", "MongoDB"],
    images: [
      "/images/entereza1.png",
      "/images/entereza2.png",
      "/images/entereza3.png"
    ]
  },
  {
    title: "QRcompensa",
    description: "Sistema de pagos QR con cashback.",
    fullDescription: "En QRcompensa, estuve a cargo del desarrollo completo del frontend y backend, creando todo el sistema en solo un mes. Utilicé ReactJS para el frontend, Node.js con Express para el backend, y MongoDB como base de datos, además de configurar y gestionar el servidor en Google Cloud Console. Actualmente, QRcompensa genera más de $2,500 mensuales y cuenta con 10 empresas afiliadas.",
    image: "/images/qrcompensaBanner.png",
    technologies: ["React", "Node.js", "MongoDB"],
    images: [
      "/images/qrcompensa1.png",
      "/images/qrcompensa2.png",
      "/images/qrcompensa3.png"
    ]
  },
  {
    title: "Tacho",
    description: "SaaS para empresas de taxis.",
    fullDescription: "En Tacho, desarrollé el backend en Node.js con Express y el frontend en ReactJS, creando dos dashboards: uno administrativo y otro para empresas. Además, lideré el desarrollo de las aplicaciones móviles y la creación de su diseño. Tacho es un SaaS para empresas de taxis que centraliza la gestión de flotas y operaciones, optimizando la eficiencia operativa de las empresas.",
    image: "/images/tachoBanner.jpg",
    technologies: ["React", "Node.js", "Express", "MongoDB"],
    images: [
      "/images/tacho1.png",
      "/images/tacho2.png",
      "/images/tacho3.png"
    ]
  }
];


const skills = [
  { skill: "JavaScript", level: 100 },
  { skill: "ReactJS", level: 100 },
  { skill: "NodeJS", level: 85 },
  { skill: "ExpressJS", level: 85 },
  { skill: "MongoDB", level: 100 },
  { skill: "SQL", level: 100 }
];
---

<Layout title="Portafolio de Alejandro Tamayo">
  <Header />
  
  <main class="container mx-auto px-4">
    <section id="about" class="py-5 md:py-5">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <AnimatedTypingText client:load />
          <p class="text-xl md:text-2xl mb-4 text-gray-300">Desarrollador Web FullStack JavaScript</p>
          <p class="text-gray-400 leading-relaxed">
            Soy un apasionado desarrollador web con experiencia en crear soluciones innovadoras y eficientes. 
            Me especializo en tecnologías como ReactJS, NodeJS, ExpressJS y MongoDB. 
            Me encanta aprender nuevas tecnologías y enfrentar desafíos creativos en el mundo del desarrollo web.
          </p>
        </div>
        <div class="md:w-1/2 flex justify-center">
          <AnimatedImage 
            src="/images/tamflikk.jpg"
            alt="Alejandro Tamayo Hornsby - Tamflikk" 
            client:load 
          />
        </div>
      </div>
    </section>

    <section id="projects" class="py-5">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-gray-100">Mis Proyectos</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project, index) => (
          <ProjectCard {...project} index={index} />
        ))}
      </div>
    </section>

    <section id="skills" class="py-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-gray-100">Mis Habilidades</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {skills.map((skill) => (
          <SkillBar {...skill} />
        ))}
      </div>
    </section>

    <section id="contact" class="py-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center text-gray-100">Contacto</h2>
      <div class="flex justify-center space-x-6">
        <a href="https://linkedin.com/in/tuusuario" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-100 transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
        </a>
        <a href="https://github.com/tuusuario" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-100 transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        </a>
        <a href="mailto:tuemail@ejemplo.com" class="text-gray-400 hover:text-gray-100 transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M0 3v18h24v-18h-24zm21.518 2l-9.518 7.713-9.518-7.713h19.036zm-19.518 14v-11.817l10 8.104 10-8.104v11.817h-20z"/></svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
  <ProjectModal client:load projects={projects} />
</Layout>